<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardCornerRadius="5dp"
    android:layout_margin="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="10dp"


        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/view1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_start_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/start"
            android:fontFamily="@font/mavenpro_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="1990"
            android:textSize="16sp"
            android:layout_marginBottom="3dp"

            app:layout_constraintStart_toEndOf="@id/view1"
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintBottom_toBottomOf="@id/view1"
            />



        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintEnd_toEndOf="@+id/view1"
            app:layout_constraintTop_toBottomOf="@id/view1"
            android:background="@color/divider" />

        <ImageView
            android:id="@+id/view3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_end_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view2"/>


        <TextView
            android:id="@+id/tvDestination"
            android:fontFamily="@font/mavenpro_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="2005"
            android:textSize="16sp"

            android:layout_marginBottom="3dp"
            app:layout_constraintStart_toEndOf="@id/view3"
            app:layout_constraintTop_toTopOf="@id/view3"
            app:layout_constraintBottom_toBottomOf="@id/view3"
     />


        <ImageView
            android:id="@+id/view"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_gender"

            app:layout_constraintEnd_toStartOf="@id/txt_gender"
            app:layout_constraintTop_toTopOf="@id/txt_gender"
            app:layout_constraintBottom_toBottomOf="@id/txt_gender"
            app:layout_constraintTop_toBottomOf="@id/view2"/>



        <TextView
            android:id="@+id/txt_gender"
            android:fontFamily="@font/mavenpro_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="male"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_margin="10dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="0.07"
            android:src="@drawable/ic_colr"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/txt_color"
            android:fontFamily="@font/mavenpro_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="top"

            android:layout_marginStart="8dp"
            android:text="male"



            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_margin="10dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="0.07"
            android:src="@drawable/ic_flag"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/txt_country"
            android:fontFamily="@font/mavenpro_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="top"

            android:layout_marginStart="8dp"
            android:text="male"



            />
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>